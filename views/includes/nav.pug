.container-fluid
 .row.align-items-center.py-3.px-lg-5
  .col-lg-4.d-none.d-lg-block
    a.text-decoration-none(href="/")
      h1.m-0.display-5.font-weight-semi-bold
        span.text-primary.font-weight-bold.border.px-3.mr-1 Diwan
        | Shop
  .col-lg-5.col-6.text-left
    form(action="/search" method="POST")
      .input-group
        input.form-control(type="search", placeholder="Search Product" name="search").search
        button(type="submit").input-group-append
          span.input-group-text.bg-transparent.text-primary
            i.fa.fa-search
  .col-lg-3.col-6.text-right
    a.btn.border(href="/favurite")
      i.fas.fa-heart.text-primary
       if isAuthcuated
        if favurite.length > 0
            span.badge
             -let tot = 0  
               each s in favurite
                -tot += s.quantity
             |#{tot}
        else 
         span.badge 0   
       else 
        span.badge 0
       
         
    a.btn.border(href="/cart")
      i.fas.fa-shopping-cart.text-primary
       if isAuthcuated
        if sepeti.length > 0
            span.badge
             -let tot = 0  
               each s in sepeti
                -tot += s.quantity
             |#{tot}
        else 
         span.badge 0   
       else 
        if sepeti.length > 0
            span.badge
             -let tot =0  
               each s in sepeti
                -tot += s.productCount
             |#{tot}
        else 
         span.badge 0
                              
    <!-- Topbar End -->
    
<!-- Navbar start -->
.container-fluid
  .row.border-top.px-lg-5
    .col-lg-12
      nav.navbar.navbar-expand-lg.bg-light.navbar-light.py-3.py-lg-0.px-0
        a.text-decoration-none.d-block.d-lg-none(href="/")
          h1.m-0.display-5.font-weight-semi-bold
            span.text-primary.font-weight-bold.border.px-3.mr-1 Diwan
            | Shop
        button.navbar-toggler(type="button",data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" style="width:auto;")
          span.navbar-toggler-icon
        .collapse.navbar-collapse.justify-content-between#navbarSupportedContent
          .navbar-nav.mr-auto.py-0
           if categorys.length > 0
            each category in categorys
             a(class=(selectedCategory === `${category.CategoryName}` ? "nav-item nav-link listStyle active" : "nav-item nav-link listStyle"), aria-current="page" href=`/products/${category.CategoryName}`) #{category.CategoryName}
           
             
          .navbar-nav.ml-auto.py-0
           if isAdmin && isAuthcuated
            a.nav-item.nav-link.listStyle(href="/admin/admin-products?action=Products Mange") ControlPanel
           if isAuthcuated
            a.nav-item.nav-link.listStyle(href="/logout") Log Out
          

           if !isAuthcuated
            a.nav-item.nav-link.listStyle(href="/login") Login
            a.nav-item.nav-link.listStyle(href="/signup") Sign up
     
<!-- Navbar End -->

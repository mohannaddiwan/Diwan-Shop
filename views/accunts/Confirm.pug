extends ../layout/layout

block content

 .container
     .form-product
       form(action="/signupConfirm" method="POST")
                    if Error 

                     div.alert.alert-danger #{Error} 
                    if Confirm 
                     div.alert.alert-danger #{Confirm} 
                    
                    
                    if ErrorMessage 
                     each Error in ErrorMessage
                       if Error.param === "email" 
                        div.alert.alert-danger #{Error.msg}     
                    .form-group.row 
                        label(for="email").col-sm-2.form-label.form-plus Email
                        .col-sm-10.mt-2
                         input(type="email" name="email").form-control#email

                    if ErrorMessage
                     each Error in ErrorMessage
                       if Error.param === "name" 
                        div.alert.alert-danger #{Error.msg}
                    .form-group.row 
                        label(for="name").col-sm-2.form-label.form-plus Ad
                        .col-sm-10.mt-2
                         input(type="text" name="name" ).form-control#userName  
                    if ErrorMessage
                     each Error in ErrorMessage
                       if Error.param === "lastName" 
                        div.alert.alert-danger #{Error.msg}
                    .form-group.row 
                        label(for="lastName").col-sm-2.form-label.form-plus Soyad
                        .col-sm-10.mt-2
                         input(type="text" name="lastName" ).form-control#lastName   
                    if ErrorMessage
                     each Error in ErrorMessage
                       if Error.param === "tel" 
                        div.alert.alert-danger #{Error.msg}
                    .form-group.row 
                        label(for="tel").col-sm-2.form-label.form-plus Tel
                        .col-sm-10.mt-2
                         input(type="text" name="tel" ).form-control#tel     
                    if ErrorMessage 
                     each Error in ErrorMessage
                       if Error.param === "password" 
                        div.alert.alert-danger #{Error.msg}
                    .form-group.row 
                        label(for="password").col-sm-2.form-label.form-plus Password
                        .col-sm-10.mt-2
                         input(type="password" name="password" ).form-control#password
                    if ErrorMessage 
                     each Error in ErrorMessage
                       if Error.param === "ConfirmPassword" 
                        div.alert.alert-danger #{Error.msg}     
                    .form-group.row 
                        label(for="ConfirmPassword" ).col-sm-2.form-label.form-plus ConfirmPassword
                        .col-sm-10.mt-2
                         input(type="password" name="ConfirmPassword" ).form-control#ConfirmPassword

                   
                    .form-group.row 
                        .col-sm-12.mt-2
                         button(type="submit").btn.btn-primary.btn-form Sign Up
